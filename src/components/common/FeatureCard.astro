---
import Icon from "@ui/icons/Icon.astro";
const { icon, title, description, styleClass } = Astro.props;
---

<div class={`z-10 flex flex-col rounded-xl bg-white/50 p-4 shadow-lg ring-1 ring-white/5 backdrop-blur-xl md:p-5 ${styleClass}`}>
  <p class="mt-1 text-xs font-medium uppercase text-slate-500">
    <Icon name={icon} />
  </p>
  {title && (
    <h3 class="mt-2 text-lg font-semibold text-slate-800">
      {title}
    </h3>
  )}
  <p class="mt-2 text-sm text-slate-600">
    {description}
  </p>
</div>
