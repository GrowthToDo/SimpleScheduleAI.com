---
import Button from "@ui/Button.astro";

const title = "Stop patching holes in the schedule";

const subTitle =
  "Scheduling stress drives your best nurses out and burns your budget. We deliver a compliant, post-ready schedule every week, with automatic callout coverage.";

const primaryCTA = {
  text: "Apply for a Pilot Spot",
  href: "/contact",
};

const secondaryCTA = {
  text: "See How It Works",
  href: "/how-it-works",
};
---

{/* Hero Content */}
<div class="mx-auto max-w-4xl select-none text-left sm:text-center fade-up fade-up-1">
  {/* Eyebrow label */}
  <div class="mb-5 inline-flex items-center gap-2 rounded-full border border-teal-700/40 bg-teal-900/40 px-4 py-1.5">
    <span class="h-1.5 w-1.5 rounded-full bg-teal-400"></span>
    <span class="text-xs font-semibold tracking-widest text-teal-300 uppercase">For Critical Access Hospitals</span>
  </div>
  <h1
    class="block text-balance text-4xl font-black text-white sm:text-5xl md:text-6xl lg:text-7xl"
  >
    {title}
  </h1>
</div>

<div class="mx-auto mt-6 max-w-2xl text-left sm:text-center fade-up fade-up-2">
  <p class="text-pretty text-lg leading-relaxed text-slate-400">
    {subTitle}
  </p>
</div>

{/* CTA Buttons */}
<div class="mt-8 flex flex-col justify-center gap-4 sm:flex-row fade-up fade-up-3">
  <Button href={primaryCTA.href} variant="primary">
    {primaryCTA.text}
  </Button>

  <a href={secondaryCTA.href} class="rounded-lg px-6 py-2.5 text-center font-medium transition-colors duration-300 border-2 border-slate-600 text-slate-300 hover:border-teal-600 hover:text-white">
    {secondaryCTA.text}
  </a>
</div>