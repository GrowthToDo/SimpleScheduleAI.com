---
import Icon from "@ui/icons/Icon.astro";

const title = "Built for Critical Access Hospitals in Texas";

const subTitle = "";

const texasCahImage = "/texas-cah.png";

const features = [
  {
    borderClasses: "md:border-r",
    gradientClasses: "bg-linear-to-l/oklch from-teal-200 to-transparent",
    icon: "clock",
    heading: "7 PM call-out: hole on next shift",
    description: "",
  },
  {
    borderClasses: "md:border-r",
    gradientClasses: "bg-linear-to-t/oklch from-teal-200 to-transparent",
    icon: "calendar",
    heading: "Two PTO overlaps plus an admission spike",
    description: "",
  },
  {
    borderClasses: "md:border-r",
    gradientClasses: "bg-linear-to-tr/oklch from-teal-200 to-transparent",
    icon: "users",
    heading: "Weekend rotation dispute and fairness complaints",
    description: "",
  },
  {
    borderClasses: "",
    gradientClasses: "bg-linear-to-l/oklch from-teal-200 to-transparent",
    icon: "shield",
    heading: "Float pool too small to cover the hole; escalation path must be clean",
    description: "",
  },
];
---

<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20">
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2 class="text-balance text-2xl font-semibold text-slate-800 md:text-3xl md:leading-tight">
      {title}
    </h2>
  </div>

  <div class="mx-auto mb-12 max-w-2xl">
    <img
      src={texasCahImage}
      alt="Built for Texas CAHs: Lean Team, 24/7 ED Reality"
      class="rounded-xl shadow-lg w-full h-auto"
    />
  </div>

  <div class="grid grid-flow-row-dense grid-cols-1 md:grid-cols-4 border-dashed border-t border-slate-400">

    {features.map((feature) => (
      <div class={`group relative mx-auto flex flex-col border-dashed border-slate-400 py-10 ${feature.borderClasses} ${feature.gridClasses}`}>
        <div class={`pointer-events-none absolute inset-0 h-full w-full ${feature.gradientClasses} opacity-0 transition duration-300 group-hover:opacity-100`} />
        <div class="relative z-10 mb-4 px-10">
          <Icon name={feature.icon} />
        </div>
        <div class="relative z-10 mb-2 px-10 text-lg font-semibold">
          <span class="inline-block text-balance text-slate-800 transition duration-300 group-hover:translate-x-2">
            {feature.heading}
          </span>
        </div>
        <p class="z-10 max-w-sm px-4 text-pretty text-sm text-slate-700 sm:max-w-lg md:mx-auto">
          {feature.description}
        </p>
      </div>
    ))}
  </div>
</section>