---
import Button from "@ui/Button.astro";

const title = "Prove it in one cycle";
const description = "Run a CAH pilot schedule for one unit. We track time-to-publish, overtime flags, and exception counts so you can see the results before committing.";
const badges = "One Unit | One Cycle | End-to-End | Risk-Free";
---

<section class="bg-teal-700">
  <div class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8 lg:py-24">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-balance text-3xl font-semibold tracking-tight text-white sm:text-4xl">
        {title}
      </h2>
      <p class="mt-4 text-lg text-teal-100">{description}</p>

      <div class="mt-8">
        <Button href="/contact" variant="primary" className="bg-white! text-teal-700! hover:bg-slate-50!">
          Run a CAH pilot schedule
        </Button>
      </div>

      <p class="mt-6 text-sm font-semibold text-teal-200">{badges}</p>
    </div>
  </div>
</section>
