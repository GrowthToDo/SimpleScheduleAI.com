---
import Button from "@ui/Button.astro";

const title = "3 pilot spots open.<br/>No cost. No obligation.";

const subTitle =
  "We're onboarding three Critical Access Hospitals for a free 60-day managed service. Every week, you get a compliant schedule, call-out replacement candidates, and a manager summary. At the end, we sit down for a strategic review: what changed, what the numbers show, and where you want to take it. If it's working and you want to continue, we'll build a plan together. The pilot itself costs you nothing.";

const primaryCTA = {
  text: "Apply for a Pilot Spot",
  href: "/contact",
};

const secondaryCTA = {
  text: "Get a walkthrough first",
  href: "/how-it-works",
};

const tags = ["Free for 60 Days", "3 Hospitals Only", "Full Managed Service", "No IT Setup"];
---

<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20">
  <div class="mx-auto mb-10 max-w-3xl text-center lg:mb-14">
    <h2 class="text-balance text-4xl text-slate-800 sm:text-5xl">
      <Fragment set:html={title} />
    </h2>

    <p class="mt-5 text-pretty text-lg/8 text-slate-600">
      {subTitle}
    </p>

    <div class="mt-7 flex flex-col items-center justify-center gap-3 sm:flex-row">
      <Button href={primaryCTA.href} variant="primary" className="inline-flex border-none px-4!">
        {primaryCTA.text}
      </Button>

      <Button href={secondaryCTA.href} variant="secondary" className="inline-flex px-4!">
        {secondaryCTA.text}
      </Button>
    </div>

    <div class="mt-6 flex flex-wrap items-center justify-center gap-2">
      {tags.map((tag) => (
        <span class="inline-flex items-center gap-x-1.5 rounded-full bg-teal-100 px-3 py-1.5 text-xs font-medium text-teal-800">
          {tag}
        </span>
      ))}
    </div>

  </div>
</section>