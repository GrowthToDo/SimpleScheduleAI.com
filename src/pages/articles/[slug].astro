---
import BaseLayout from "@layout/BaseLayout.astro";
import { getCollection, render } from "astro:content";
import Button from "@ui/Button.astro";

export async function getStaticPaths() {
  const articles = await getCollection("articles");

  return articles.map((article) => ({
    params: { slug: article.id },
    props: { article },
  }));
}

const { article } = Astro.props;
const { Content } = await render(article);

const seo = {
  title: `${article.data.title} - SimpleScheduleAI`,
  description: article.data.description,
};
---

<BaseLayout seo={seo}>
  <article class="relative overflow-hidden">
    <div class="pointer-events-none absolute inset-0">
      <div class="absolute -top-24 left-1/2 h-80 w-[52rem] -translate-x-1/2 rounded-full bg-teal-200/40 blur-3xl"></div>
    </div>

    <div class="relative mx-auto max-w-[85rem] px-4 pb-20 pt-32 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl">
        <div class="mb-8">
          <a href="/articles" class="inline-flex items-center text-sm font-semibold text-teal-700 hover:text-teal-600">
            ‚Üê Back to articles
          </a>
        </div>

        <header class="mb-10">
          <time class="text-sm text-slate-600">
            {article.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
          <h1 class="mt-3 text-balance text-4xl font-semibold tracking-tight text-slate-900 sm:text-5xl">
            {article.data.title}
          </h1>
          <p class="mt-4 text-lg text-slate-700">
            {article.data.description}
          </p>
        </header>

        <div class="prose prose-slate prose-lg max-w-none">
          <Content />
        </div>

        <div class="mt-12 rounded-2xl border border-teal-200 bg-teal-50 p-8">
          <h2 class="text-xl font-semibold text-slate-900">Ready to transform your scheduling?</h2>
          <p class="mt-3 text-slate-700">
            Learn how SimpleScheduleAI can help your Critical Access Hospital reduce scheduling chaos, overtime, and burnout.
          </p>
          <div class="mt-6 flex flex-col gap-3 sm:flex-row">
            <Button href="/contact" variant="primary">
              Request a pilot
            </Button>
            <Button href="/how-it-works" variant="secondary">
              How it works
            </Button>
          </div>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>
